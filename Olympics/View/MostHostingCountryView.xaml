<UserControl x:Class="Olympics.View.MostHostingCountryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Olympics.View"
             mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <Viewbox Grid.Row="0" Margin="20">
            <Image Source="{Binding MostHostingCountry.ImagePath}"/>
        </Viewbox>
        <Viewbox Grid.Row="1">
            <Label Content="{Binding MostHostingCountry}" FontFamily="Cooper Black" Foreground="White"/>
        </Viewbox>
        <Viewbox Grid.Row="2" Margin="20">
            <Image Source="{Binding MostHostingCountry.ImagePath}"/>
        </Viewbox>
            
        

    </Grid>
</UserControl>
